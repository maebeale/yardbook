<p id="notice"><%= notice %></p>

  <strong>Fname:</strong>
  <%= @student.fname %>
</p>

<p>
  <strong>Lname:</strong>
  <%= @student.lname %>
</p>

<% if @student.profile_pic?%>
    <p>
      <strong>Profile_pic:</strong>
      <%= link_to "profile_pic", @student.profile_pic.url %>
      <%= image_tag profile_pic.profile_pic.url(:web, :preview) %>
      <%= image_tag profile_pic.profile_pic.url(:print, :full) %>
      <%= image_tag profile_pic.profile_pic.url(:web, :thumb) %>
    </p>
<% end %>

