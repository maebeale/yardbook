<h1>Listing admins</h1>

<table>
  <thead>
  <tr>
    <th>Fname</th>
    <th>Lname</th>
    <th>Email</th>
    <th>Blurb</th>
    <th>GitHub url</th>
    <th>Twitter url</th>
    <th>LinkedIn url</th>
    <th>Webpage</th>
    <th>Title</th>
    <th>Profile Pic</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @admins each do |f| %>
      <tr>
        <td><%= f.fname %></td>
        <td><%= f.lname %></td>
        <td><%= f.email %></td>
        <td><%= f.blurb %></td>
        <td><%= f.github_url %></td>
        <td><%= f.twitter_url %></td>
        <td><%= f.linkedin_url %></td>
        <td><%= f.webpage %></td>
        <td><%= f.title %></td>
        <td><% if f.profile_pic? %>
              <%= link_to "profile_pic", f.profile_pic.url %>
              <%= image_tag @admins.profile_pic.url(:thumb) %>
          <% end %> </td>
        <td><%= link_to 'Show', admins %></td>
        <td><%= link_to 'Edit', edit_admins_path(admins) %></td>
        <td><%= link_to 'Destroy', admins, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
  <% end %>
  </tbody>
</table>